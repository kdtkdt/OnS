<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.ons.study.dao.BoardDAO">

<!-- 전체 리스트 조회 -->
<select id="getTotalBoard" resultType="boarddto" >
select * from content
</select>

<!-- 게시글 종류 -->

<!-- 게시글 작성: 작성자, board_type 수정 필요-->
<insert id="writeBoard" parameterType="boarddto">
	insert into content(user_id, title, contents, created_time, board_type, rating) 
	values(1,#{title},#{contents},now(),1,#{rating})
</insert>

</mapper>






